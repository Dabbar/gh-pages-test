                    "singleQuote": true,
                    "semi": true,
                    "trailingComma": "none",
                    "bracketSpacing": true
                }
            },
            {
                "files": ["*.ts", "*.tsx"],
                "options": {
                    "singleQuote": true,
                    "semi": true,
                    "trailingComma": "none",
                    "bracketSpacing": true,
                    "parser": "typescript"
                }
            }
        ]
    }
