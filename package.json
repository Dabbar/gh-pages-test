    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^7.2.5",
        "babel": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "node-sass": "^4.7.2",
